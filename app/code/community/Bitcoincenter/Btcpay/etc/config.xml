<?xml version="1.0"?>
<config>
    <modules>
        <Bitcoincenter_Btcpay>
            <version>1.0.1</version>
        </Bitcoincenter_Btcpay>
    </modules>
    <global>
		<helpers>
            <bitcoincenter_btcpay>
                <class>Bitcoincenter_Btcpay_Helper</class>
            </bitcoincenter_btcpay>
        </helpers>
        <models>
            <btcpay>
                <class>Bitcoincenter_Btcpay_Model</class>
                <resourceModel>btcpay_mysql4</resourceModel>
            </btcpay>
             <btcpay_mysql4>
                <class>Bitcoincenter_Btcpay_Model_Mysql4</class>
                <entities>
                    <btcpay>
                        <table>bitcoincenter_btcpay</table>
                    </btcpay>
                </entities>
            </btcpay_mysql4>
        </models>
        <resources>
            <btcpay_setup>
                <setup>
                    <module>Bitcoincenter_Btcpay</module>
                    <class>Mage_Catalog_Model_Resource_Eav_Mysql4_Setup</class>
                </setup>
                <connection>
					<use>core_setup</use>
			  </connection>
            </btcpay_setup>
            <btcpay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </btcpay_write>
            <btcpay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </btcpay_read>
        </resources>
        <blocks>
            <bitcoincenter_btcpay>
                <class>Bitcoincenter_Btcpay_Block</class>
            </bitcoincenter_btcpay>
            <bitcoincenter_btcpay_adminhtml>
                <class>Bitcoincenter_Btcpay_Block_Adminhtml</class>
            </bitcoincenter_btcpay_adminhtml>
        </blocks>
        
        
        
        
        
        <!--
        <events>
            <catalog_product_load_after>
                <observers>
                    <bitcoincenter_btcpay>
                        <class>bitcoincenter_btcpay/observer</class>
                        <method>catalogProductLoadAfter</method>
                    </bitcoincenter_btcpay>
                </observers>
            </catalog_product_load_after>
        </events>
        -->
    </global>
    <frontend>
		
        <routers>
           <bitcoincenter_btcpay>
               <use>standard</use>
               <args>
                   <module>Bitcoincenter_Btcpay</module>
                   <frontName>btcpay</frontName>
               </args>
           </bitcoincenter_btcpay>
        </routers>
        
        <layout>
            <updates>
                <bitcoincenter_btcpay>
                    <file>bitcoincenter_btcpay.xml</file>
                </bitcoincenter_btcpay>
            </updates>
        </layout>
    </frontend>
