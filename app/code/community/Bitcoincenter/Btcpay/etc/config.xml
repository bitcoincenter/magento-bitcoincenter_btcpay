    <default>
        <payment>
            <bitcoincenter>
                <model>btcpay/payment</model>
                <title>Pay with Bitcoins</title>
                <active>0</active>
				<apiurl>http://www.bitcoincenter.nl/apiv1</apiurl>
                <merchant_id />
                <order_status>pending</order_status>
            </bitcoincenter>
        </payment>
    </default>
    
